        Title="GTS Android SDK Manager" Height="623" Width="800" Background="#3C3F41">
	<Grid>
		<Label Content="Android SDK Location:" 
               Name="LocationLabel"
               HorizontalAlignment="Left"
               Height="26" Margin="10,10,0,0" 
               VerticalAlignment="Top" 
               Width="131" 
               Background="#3C3F41" 
               Foreground="#BBBBBB"/>
		<TextBox HorizontalAlignment="Left" 
                 Name="FolderPathBox" 
                 Height="19" Margin="146,15,0,0" 
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="395"
                 TextChanged="TextBox_TextChanged" 
                 Background="#3C3F41" 
                 Foreground="#BBBBBB"
                 BorderBrush="#696969"/>
		<TextBlock HorizontalAlignment="Left" 
                   Name="OpenFolder" 
                   Height="19"
                   Margin="556,15,0,0"
                   TextWrapping="Wrap" 
                   Text="Edit" 
                   VerticalAlignment="Top" 
                   Width="81" 
                   MouseLeftButtonUp="OpenFolder_MouseLeftButtonUp"
                   Background="#3C3F41" 
                   Foreground="#589DF6"
                   TextDecorations="Underline"/>
		<TabControl HorizontalAlignment="Left" 
                    Height="368" 
                    Margin="10,41,0,0" 
                    VerticalAlignment="Top" 
                    Width="772"
                    Background="#41516D"
                    BorderBrush="#292B2D"
                    >
			<TabControl.Resources>
				<Style TargetType="TabItem">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="TabItem">
								<Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="#292B2D" CornerRadius="4,4,0,0" Margin="2,0" >
									<ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"
                                        />
								</Border>
								<ControlTemplate.Triggers>
									<Trigger Property="IsSelected" Value="True">
										<Setter TargetName="Border" Property="Background" Value="#41516D" />
									</Trigger>
									<Trigger Property="IsSelected" Value="False">
										<Setter TargetName="Border" Property="Background" Value="#3C3F41" />
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</TabControl.Resources>
			<TabItem Header="SDK Platform"
                     Background="#41516D"
                     Foreground="#BBBBBB"
                     >

