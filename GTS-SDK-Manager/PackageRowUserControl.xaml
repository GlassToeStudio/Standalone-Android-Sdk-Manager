<UserControl x:Class="GTS_SDK_Manager.PackageRowUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GTS_SDK_Manager"
             mc:Ignorable="d" 
    
             d:DesignHeight="20" d:DesignWidth="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="332*"/>
			<ColumnDefinition Width="0*"/>
			<ColumnDefinition Width="167*"/>
			<ColumnDefinition Width="0*"/>
			<ColumnDefinition Width="165*"/>
			<ColumnDefinition Width="0*"/>
			<ColumnDefinition Width="0*"/>
			<ColumnDefinition Width="0*"/>
			<ColumnDefinition Width="136*"/>
		</Grid.ColumnDefinitions>

		<CheckBox Grid.Column="0" Name="xNameHeader" Content="{Binding Path=PackageName}" Margin="10,0,0,0" Foreground="#BBBBBB"/>
		<TextBlock Grid.Column="2" Name="xAPIHeader" Text="{Binding Path=APILevel}" TextAlignment="left" Margin="5,0,1,0" Foreground="#BBBBBB"/>
		<TextBlock Grid.Column="4" Name="xRevisionHeader" Text="{Binding Path=Revision}" TextAlignment="left" Margin="4,0,0,0" Foreground="#BBBBBB"/>
		<TextBlock Grid.Column="8" Name="xStatusHeader" Text="{Binding Path=Status}" TextAlignment="left" Foreground="#BBBBBB" Margin="5,0,0,0"/>

	</Grid>

</UserControl>
