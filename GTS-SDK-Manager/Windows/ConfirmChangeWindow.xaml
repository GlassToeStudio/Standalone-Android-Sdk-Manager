<Window x:Class="GTS_SDK_Manager.ConfirmChangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GTS_SDK_Manager"
        mc:Ignorable="d"
        Title="Confirm Change" Height="200" Width="375" Background="#3C3F41"
		WindowStartupLocation="CenterScreen">
	<Grid DataContext="{Binding}">
		<Border Margin="0,0,0,133">
		<TextBlock Text="The following components will be installed:" Margin="48,10,0,0"></TextBlock>
		</Border>
			<Border Margin="10,69,10,40">
			<StackPanel Visibility="Visible" Margin="0,-30,0,0">
				<TextBlock Name="Information" Text="{Binding Information}" Margin="53,0,0,0" Height="87"/>
			</StackPanel>
		</Border>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,129,10,10">
			<Button Content="OK" Width="60" Margin="0, 0, 10, 0" Command="{Binding AcceptCommand}"/>
			<Button Content="Cancel" Width="60" Margin="10, 0, 0,0" Command="{Binding CancelCommand}"/>
		</StackPanel>
	</Grid>
</Window>
